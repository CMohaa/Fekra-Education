<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/allview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/lesson_icon"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/quizcourse"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/ic_desc_24dp"/>

    <com.rovaind.academy.Utils.FitDoughnut
        android:id="@+id/doughnutres"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/lesson_icon"
        android:layout_alignRight="@+id/lesson_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:fdColorPrimary="@android:color/white"
        app:fdColorSecondary="#68ffffff"
        android:visibility="gone"
        />

    <com.rovaind.academy.Utils.views.TextViewAr
        android:id="@+id/lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lesson_icon"
        android:layout_marginTop="3dp"
        android:fontFamily="casual"
        android:paddingBottom="3dp"
        android:text="@string/loading"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</RelativeLayout>